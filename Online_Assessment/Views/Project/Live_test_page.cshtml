<!DOCTYPE html>
<html>
<head>
    <title>Live Test</title>
    <script src="~/Scripts/handlebars.min.js"></script>
    <link href="~/App_Start/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Live_script.js"></script>
</head>
<body>
    <input type="hidden" id="test_id" name="test_id" value="@ViewData["Test_Id"]" />
    <input type="hidden" id="user_id" name="user_id" value="@ViewData["user_id"]" />
    <div id="test_body">
        <script id="template" type="text/x-handlebars-template">
        <div class="container mt-5">
        <div class="row">
            <div class="col-10"></div>
            <div class="col-2">
                <label><b>Time Left:</b></label>
                <label id="Timer" class="btn btn-primary"></label>
            </div>
        </div>

        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <input type="hidden" id="Question_id" name="Question_id" value="{{question.Question_Id}}" />
                <label id="Question">{{question.Questions}}</label>
                <br />
                <br />
        {{#each options}}
                <input type="radio" id="option1" name="options" value="{{this.Option_Id}}" />
                <label id="answer1">{{this.Options}}</label>
                <br />
        {{/each}}
            </div>
            <div class="col-1"></div>
        </div>

        <div class="row">
            <div class="col-4">
                <button id="Previous_btn" type="button" onclick="Previous_question()" class="btn btn-secondary rounded w-25 h-100">Previous</button>
            </div>
            <div class="col-4">
                <button class="btn btn-primary rounded w-25 h-100">Submit</button>
            </div>
            <div class="col-4">
                <button id="Next_btn" type="button" onclick="Next_question()" class="btn btn-success rounded w-25 h-100">Next</button>
            </div>
        </div>
    </div>
        </script>
    </div>
</body>
</html>
